<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adriyansahefendinoor.myhotel.HotelProfil">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aston_lombok" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:text="Terletak tepat di pusat kota Mataram, ibukota Lombok, Aston Inn Mataram terletak 45 menit berkendara dari Bandara Internasional Lombok. Hotel terletak di jalan utama kota, tidak jauh dari pusat pemerintahan dan gedung perkantoran lainnya di Mataram."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Aston Inn Mataram adalah tempat yang tepat untuk menjelajahi Mataram. Hotel memiliki kemudahan akses ke berbagai tempat wisata, termasuk Pantai Senggigi yang terkenal dan Pantai Kuta di Lombok Tengah. Persiapkan diri anda untuk menjelajahi tempat wisata lain yang terletak tidak jauh dari hotel seperti: Taman Mayura, Taman Narmada, Candi Meru, Kota Tua Ampenan and pusat perbelanjaan di kota."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>
