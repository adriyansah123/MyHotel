<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/gambar_paket"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/paket_bisnis"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/nama_paket"
                android:text="nama paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tanggal_pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tanggal pesan" />

            <TextView
                android:id="@+id/harga_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Paket" />
        </LinearLayout>
</LinearLayout>
